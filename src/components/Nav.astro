---
/** Main menu items - Verplaatsen naar const */
const textLinks: { label: string; href: string }[] = [
	// { label: 'IG', href: '#content' },
	{ label: 'E-mail', href: 'mailto:hello@jeffreyderoode.nl' },
	{ label: 'Call', href: '#contact' },
];
---

<nav class="fixed z-50 grid w-full grid-cols-2 outer overflow-hidden nav">
	<div class="left">
		<h1 class="">
			<a href="#" class="js-anchor-link">Jeffrey de Roode</a>
		</h1>
	</div>
	<div class="flex items-center justify-between right">
		<div id="date" class="date">Time</div>
		<div class="menu uppercase pl-vw-8">
			{
				textLinks.map((l) => (
					<a class="" href={l.href}>
						{l.label}
					</a>
				))
			}
		</div>
	</div>
</nav>

<style>
	nav {
		/* mix-blend-mode: exclusion; */
		background: var(--bg);
		border-bottom: var(--gapborder) solid var(--text);
		color: var(--text);
		font-family: var(--font-mono);
		font-size: var(--text-xs);
		font-weight: 500;
		padding: var(--space-xs);
		height: 2.5rem;
	}
	h1 {
		font-family: var(--font-body);
		font-weight: 700;
	}

	.right {
		padding-left: var(--space-xs);
	}

	nav.nav-up {
		transform: translateY(-100%); /* Verbergt de header */
		transition: transform 0.3s ease;
	}

	nav.nav-down {
		transform: translateY(0); /* Toont de header */
		transition: transform 0.3s ease;
	}
</style>

<script>
	// Verberg header bij scrollen naar beneden
	let didScroll;
	let lastScrollTop = 0;
	const delta = 200;
	const navbar = document.querySelector('nav');
	const navbarHeight = navbar.offsetHeight;

	window.addEventListener('scroll', function (event) {
		didScroll = true;
	});

	setInterval(function () {
		if (didScroll) {
			hasScrolled();
			didScroll = false;
		}
	}, 250);

	function hasScrolled() {
		const st = window.pageYOffset || document.documentElement.scrollTop;

		// Zorg ervoor dat er meer dan delta wordt gescrold
		if (Math.abs(lastScrollTop - st) <= delta) return;

		// Als ze naar beneden scrollen en voorbij de navbar zijn, voeg de class .nav-up toe.
		if (st > lastScrollTop && st > navbarHeight) {
			// Scroll omlaag
			navbar.classList.remove('nav-down');
			navbar.classList.add('nav-up');
		} else {
			// Scroll omhoog
			if (st + window.innerHeight < document.body.scrollHeight) {
				navbar.classList.remove('nav-up');
				navbar.classList.add('nav-down');
			}
		}

		lastScrollTop = st;
	}
	// Function to update the date and time
	function updateDateTime() {
		const dateElement = document.getElementById('date');
		const currentDate = new Date();
		const year = currentDate.getFullYear();
		const month = String(currentDate.getMonth() + 1).padStart(2, '0');
		const day = String(currentDate.getDate()).padStart(2, '0');
		const hours = String(currentDate.getHours()).padStart(2, '0');
		const minutes = String(currentDate.getMinutes()).padStart(2, '0');
		const seconds = String(currentDate.getSeconds()).padStart(2, '0');
		const milliseconds = String(currentDate.getMilliseconds()).padStart(3, '0');
		//const dateTime = `${year}.${month}.${day} ${hours}:${minutes}:${seconds}.${milliseconds}`;
		const dateTime = `${hours}:${minutes}:${seconds}.${milliseconds}`;
		dateElement.textContent = `${dateTime}`;

		// Update the date and time every millisecond
		setTimeout(updateDateTime, 1);
	}

	// Call the updateDateTime function to start updating the date and time
	updateDateTime();
</script>
